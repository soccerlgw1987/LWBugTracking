@model LWBugTracking.Models.TicketNotification
@using LWBugTracking.Models
@using Microsoft.AspNet.Identity

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Details</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Dashboard</span></li>
                <li><span>Tickets</span></li>
                <li><span>Notifications</span></li>
                <li><span>Details</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->

    <section class="content-with-menu mailbox">
        <div class="content-with-menu-container" data-mailbox data-mailbox-view="email">

            <div class="inner-body mailbox-email">
                <!-- START: .mailbox-header -->
                <div class="mailbox-email-header mb-lg">
                    <h3 class="mailbox-email-subject m-none text-light">
                        Ticket Title - @Model.Ticket.Title
                    </h3>

                    <p class="mt-lg mb-none text-md">From LWBugTracker to @Model.Recipient.FirstName @Model.Recipient.LastName, sent on @Model.Created.ToString("MMMM dd, yyyy h:mm tt")</p>
                </div>
                <div class="mailbox-email-container">
                    <div class="mailbox-email-screen">
                        <div class="panel">
                            <div class="panel-heading">
                                <div class="panel-actions">
                                </div>

                                <p class="panel-title"></p>
                            </div>
                            <div class="panel-body">
                                <p>@Model.NotificationBody</p>
                                <p>Click here to view this <a href="@Url.Action("TicketsDashboard","Tickets", new { id = Model.TicketId})">ticket!</a></p>
                            </div>
                            <div class="panel-footer">
                                <p class="m-none"><small>@Model.Created.ToString("MMMM dd, yyyy h:mm tt")</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
