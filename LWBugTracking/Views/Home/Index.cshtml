<script>
    var urlDoubleLine = '@Url.Action("GetStackedBarChartData", "AjaxData")';
    $.post(urlDoubleLine).then(function (response) {
        $('#morrisStacked').empty();
        new Morris.Bar({
            resize: true,
            element: 'morrisStacked',
            data: response,
            xkey: 'y',
            ykeys: ['a', 'b'],
            labels: ['New/In Progress', 'Over Due!'],
            barColors: ['#0088cc', '#FF0000'],
            fillOpacity: 0.7,
            smooth: false,
            stacked: true,
