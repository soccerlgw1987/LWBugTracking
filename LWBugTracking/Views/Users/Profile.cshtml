        <div class="col-md-4 col-lg-3">

            <section class="panel">
                <div class="panel-body">
                    <div class="thumb-info mb-md">

                        @{ 
                            var avatarPath = "";

                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            var db = new ApplicationDbContext();
                            var userId = User.Identity.GetUserId();
                            avatarPath = db.Users.Find(userId).AvatarPath;

                            if (avatarPath == null)
                            {
                                avatarPath = "/img/ui-bg_diagonals-thick_20_666666_40x40.png";
                            }
                        }
                        else
                        {
                            avatarPath = "/img/!logged-user.jpg";

                        }
                        <img src="@avatarPath" alt="" class="rounded img-responsive" />
                    </div>
                </div>
            </section>
        </div>
        <br />
        <div class="thumb-info-title">
            <span class="thumb-info-inner">@User.Identity.GetUserName()</span>
            <span class="thumb-info-type">
                @if (HttpContext.Current.User.IsInRole("Admin"))
                {
                    <b>Admin</b>
                }
                else if (HttpContext.Current.User.IsInRole("Project Manager"))
                {
                    <b>Project Manager</b>
                }
                else if (HttpContext.Current.User.IsInRole("Developer"))
                {
                    <b>Developer</b>
                }
                else if (HttpContext.Current.User.IsInRole("Submitter"))
                {
                    <b>Submitter</b>
                }
                else
                {
                    <b>No assigned role</b>
                }
            </span>
        </div>

