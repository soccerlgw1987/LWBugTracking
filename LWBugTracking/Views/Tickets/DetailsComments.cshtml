
@model LWBugTracking.Models.Ticket
@using LWBugTracking.Helper
@using LWBugTracking.Models

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Ticket Comments</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Home")">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Dashboard</span></li>
                <li><span>Tickets</span></li>
                <li><span>Ticket Comments</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <!-- start: page -->
    <br />
    <br />
    @{
        var commentAuthors = new List<ApplicationUser>();
        foreach (var comment in Model.TicketComments)
        {
            commentAuthors.Add(comment.User);
        }
    }
    <div class="inner-toolbar clearfix">
        <ul>
            <li class="right">
                <ul class="nav nav-pills nav-pills-primary">
                    <li>
                        <label>Commenter</label>
                    </li>

                    @foreach (var user in commentAuthors.Distinct())
                    {
                        <li class="active">
                            <a href="#@(user.Email)" data-toggle="tab">@user.FirstName @user.LastName</a>
                        </li>
                    }


                </ul>
            </li>
        </ul>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <form>
                    <section class="panel">
                        <header class="panel-heading">
                            <div class="panel-actions">
                                <a href="#" class="fa fa-caret-down"></a>
                            </div>

                            <h2 class="panel-title">Add Comment</h2>
                        </header>
                        @using (Html.BeginForm("Create", "TicketComments", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-lg-12">

                                        <textarea class="form-control" rows="5" placeholder="Type your message"></textarea>
                                    </div>
                                </div>
                            </div>
                            <footer class="panel-footer">
                                <button class="btn btn-primary">Add Comment</button>
                            </footer>
                        }
                    </section>
                </form>
            </div>
        </div>
    }


    <section class="panel">
        <div class="panel-body tab-content">
            @foreach (var user in commentAuthors.Distinct())
            {

                <div id="@(user.Email)" class="tab-pane">
                    <table class="table table-striped table-no-more table-bordered  mb-none">
                        <thead>
                            <tr>
                                <th style="width: 10%"><span class="text-normal text-sm">Name</span></th>
                                <th style="width: 15%"><span class="text-normal text-sm">Date</span></th>
                                <th><span class="text-normal text-sm">Message</span></th>
                            </tr>
                        </thead>
                        <tbody class="log-viewer">
                            @foreach (var comment in Model.TicketComments.Where(t => t.UserId == user.Id))
                            {
                                <tr>

                                    <td data-title="Type" class="pt-md pb-md">
                                        @comment.User.FirstName
                                    </td>
                                    <td data-title="Date" class="pt-md pb-md">
                                        @comment.Created.ToString("MM/dd/yyyy")
                                    </td>
                                    <td data-title="Message" class="pt-md pb-md">
                                        @comment.CommentBody
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </section>
</section>

